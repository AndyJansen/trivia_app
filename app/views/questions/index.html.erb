<h1>Welcome!</h1> <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
<p><%= current_user.email %></p>


<h3> Here are all of the questions you have contributed. Feel free to create a new question, edit, or delete below! </h3>
<table>
  <tr>
    <th>Category</th>
    <th>Question</th>
    <th>Correct Answer</th>
    <th>Answer Option One</th>
    <th>Answer Option Two</th>
    <th>Answer Option Two</th>



    <th colspan="2"></th>
  </tr>
 
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.category %></td>
      <td><%= question.question %></td>
      <td><%= question.correct_answer %></td>
      <td><%= question.answer_option_one %></td>
      <td><%= question.answer_option_two %></td>
      <td><%= question.answer_option_three %></td>

      <td><%= link_to 'Edit', edit_user_question_path(current_user, question) %></td>
      <td><%= link_to 'Delete', user_question_path(current_user, question),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

     

     
    </tr>
  <% end %>
</table>
<br>
<%= link_to "Create a new question", new_user_question_path(current_user, @question) %>




